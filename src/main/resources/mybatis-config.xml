  </typeAliases>	

  <mappers>
    <mapper resource="mappers/NewsMapper.xml" />
    <mapper resource="mappers/CourseMapper.xml" />
    <mapper resource="mappers/Course_orderMapper.xml" />
    <mapper resource="mappers/GuideMapper.xml" />
    <mapper resource="mappers/UserMapper.xml" />
    <mapper resource="mappers/FeedbackMapper.xml" />
    <mapper resource="mappers/MessageMapper.xml" />
  </mappers>

</configuration>

